@{
    ViewData["Title"] = "Home Page";
    }
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js"></script>
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
        <link href="~/lib/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.js">
        </script>
        <script src="http://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.js">
        </script>
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    </environment>
    <style>
        .margin {
            margin-bottom: 40px;
        }

        .bacground-1 {
            background: #b6ff00;
            color: #ffffff;
            border-radius: 0px;
        }

        .navbar {
            border: 0;
            font-size: 17px;
            border-radius: 0;
            margin-bottom: 0;
            font-family: 'Californian FB';
            letter-spacing: 2px;
            background: #079a0e;
        }

        .navbar-toggle {
            margin: 0 0 0 0;
        }

        .radio-inline {
            padding: 0 25px 0 0;
        }

        .navbar li a, .navbar .navbar-brand {
            color: #ffffff !important;
        }

        .navbar-header a:hover, .navbar-header a.active {
            color: #ffffff !important;
        }

        .navbar-nav li a:hover, .navbar-nav li.active a {
            background: #ffffff !important;
            color: #079a0e !important;
        }

        .navbar-default {
            color: #ffffff !important;
        }

        .fontColor {
            color: #ffffff;
        }

        .zeroBord {
            border: 0;
        }

        .container-fluid {
            padding: 60px 50px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarTop">
                    <div class="radio-inline">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </div>
                    <div class="radio-inline">
                        <span>Menu</span>
                    </div>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="navbarTop">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#about">ABOUT</a></li>
                </ul>
            </div>
        </div>
    </nav>
</body>
</html>